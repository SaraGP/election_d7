  $items = array();
  $items['election-post/%election_post/results'] = array(
    'title' => 'Results',
    'page callback' => 'election_results_page',
    'page arguments' => array(1),
    'access callback' => 'election_results_access',
    'access arguments' => array('view', 1),
    'type' => MENU_LOCAL_TASK,
    'weight' => 4,
  );
  $items['election-post/%election_post/results/overview'] = array(
    'title' => 'Overview',
    'type' => MENU_DEFAULT_LOCAL_TASK,
    'weight' => 0,
  );
  $items['election-post/%election_post/results/count'] = array(
    'title' => 'Count votes',
    'page callback' => 'drupal_get_form',
    'page arguments' => array('election_results_count_form', 1),
    'access callback' => 'election_results_access',
    'access arguments' => array('view', 1),
    'type' => MENU_LOCAL_TASK,
    'weight' => 1,
  );
  $items['election-post/%election_post/results/blt'] = array(
    'title' => 'Download BLT file of votes',
    'page callback' => '_election_results_download_blt',
    'page arguments' => array(1),
    'access callback' => 'election_results_access',
